<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MeloStats</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MeloStats.styles.css" asp-append-version="true" />
</head>
<body>
    
    <header id="header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="toggle-btn" onclick="toggleSidebar()">&#9776;</div>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MeloStats</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="sidebar collapsed">
        <div class="dropdown">
            <a href="#" class="dropdown-btn">Top Artists</a>
            <div class="dropdown-content">
                <a href="/Artists/TopArtists?timeRange=short_term">Last 4 weeks</a>
                <a href="/Artists/TopArtists?timeRange=medium_term">Last 6 months</a>
                <a href="/Artists/TopArtists?timeRange=long_term">Last year</a>
            </div>
        </div>
        <div class="dropdown">
            <a href="#" class="dropdown-btn">Top Tracks</a>
            <div class="dropdown-content">
                <a href="/Tracks/TopTracks?timeRange=short_term">Last 4 weeks</a>
                <a href="/Tracks/TopTracks?timeRange=medium_term">Last 6 months</a>
                <a href="/Tracks/TopTracks?timeRange=long_term">Last year</a>
            </div>
        </div>
        <a href="/Tracks/RecentTracks" class="sidebar-link">Recent Listened Tracks</a>
    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
